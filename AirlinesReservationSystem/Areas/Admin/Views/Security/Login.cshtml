@model AirlinesReservationSystem.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<div class="text-center" style="width:70%">
    <img class="mb-4" src="~/Asset/img/logo.png" alt="" width="200px" style="padding:20px;background:black;">
    <h1 class="h3 mb-3 font-weight-normal">Đăng nhập</h1>
    @using (Html.BeginForm("Login", "Security", FormMethod.Post, new { @class = "form-signin" }))
    {

        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.TextBoxFor(m => m.email, "", new { @class = "form-control", @placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-lg btn-warning btn-block" value="Đăng nhập" />
        </div>
    }
</div>

